extends ../layout

block body
  div#mainframe
    p Welcome to MTGNode
    div.alert.alert-error.hide
        button.close(data-dismiss='alert') &times;
        strong Unauthorized Attempt!
    for user in users
        div
            button.btn.btn-default.override-connect(type='button', username=user.username, password=user.password) Connect as #{user.username}

block contextual_js
    script(type="text/javascript", src="/js/mtgnode/simple/Login.js")