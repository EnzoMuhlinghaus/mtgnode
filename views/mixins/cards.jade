// Card Mixins
mixin card(card_object)
	img(class='card-min draggable', src="#{CARD_BASE_URL}#{card_object.set_code}/#{card_object.number}.jpg", card_number='#{card_object.number}', set_code='#{card_object.set_code}')

mixin card_mine(card_object, i)
	img(id='card#{i}_mine', card_id='#{i}', class='card-min draggable mine in-deck', true_src="#{CARD_BASE_URL}#{card_object.set_code}/#{card_object.number}.jpg", src="/images/card-back.jpeg")

mixin card_opponent(card_object, i)
	img(id='card#{i}_opponent', card_id='#{i}', class='card-min draggable opponent in-deck', true_src="#{CARD_BASE_URL}#{card_object.set_code}/#{card_object.number}.jpg", src="/images/card-back.jpeg")

mixin card_viewer_widget()
	img(id='card_viewer_widget', src='/images/card-back.jpeg')